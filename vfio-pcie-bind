#!/bin/sh
# Early vfio-pci binding via initramfs
# It unloads the AHCI and NVMe drivers and binds the devices to vfio-pci for those in the list
# this won't work for non-AHCI/NVMe devices

PREREQ=""
prereqs() { echo "$PREREQ"; }

case "$1" in
  prereqs) prereqs; exit 0 ;;
esac

. /scripts/functions
echo "ğŸ”§ vfio-pci-bind starting" > /dev/kmsg

# === Devices to pass through to vfio-pci ===
BIND_TO_VFIO="
0000:05:00.0
0000:06:00.0
0000:07:00.0
0000:42:00.0
0000:42:00.1
0000:a1:00.0
0000:a3:00.0
0000:a5:00.0
0000:a7:00.0
0000:e1:00.0
0000:e2:00.0
0000:e3:00.0
0000:e4:00.0
0000:e6:00.0
0000:e6:00.1
"

for id in $BIND_TO_VFIO; do
  driver_link="/sys/bus/pci/devices/$id/driver"
  if [ -e "$driver_link" ]; then
    # Check current driver name
    current_drv=$(basename "$(readlink "$driver_link")" 2>/dev/null || echo "")
    if [ "$current_drv" = "nvme" ] || [ "$current_drv" = "ahci" ]; then
      echo "$id" > "$driver_link/unbind"
      echo "ğŸ’¥ Unbound $id from $current_drv" > /dev/kmsg
    else
      echo "â„¹ï¸  $id is not bound to nvme or ahci (found: $current_drv)" > /dev/kmsg
    fi
  fi

  echo vfio-pci > /sys/bus/pci/devices/$id/driver_override
  echo "ğŸ¯ Set override to vfio-pci for $id" > /dev/kmsg
done

modprobe -i vfio-pci
echo "âœ… vfio-pci modprobe completed" > /dev/kmsg
